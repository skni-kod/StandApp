<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:theme="@style/Theme.Material3.Dark"
            app:rippleColor="@android:color/transparent"
            app:cardElevation="@dimen/shadow_card"
            app:cardCornerRadius="@dimen/radius_card"
            style="?attr/materialCardViewFilledStyle"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_card"
                    >
                        <TextView
                            android:id="@+id/item_project_section"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:padding="5dp"
                            android:textSize="10sp"
                            />
                        <TextView
                            android:id="@+id/item_project_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/item_project_section"
                            android:layout_centerInParent="true"
                            android:textSize="20sp"
                            android:padding="5dp"
                            />
                        <TextView
                            android:id="@+id/item_project_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/item_project_title"
                            android:textSize="12sp"
                            android:padding="5dp"
                            android:maxLines="2"
                            />
                </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>





</LinearLayout>